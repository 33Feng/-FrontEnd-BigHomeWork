{"ast":null,"code":"import { ref } from 'vue';\nimport { ElRow, ElCol } from 'element-plus';\nimport QaPanel from './components/QaPanel.vue';\nimport GraphVisual from './components/GraphVisual.vue';\n\n// 核心实体状态（联动问答和图谱）\n\nexport default {\n  __name: 'App',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const mainEntity = ref(''); // 来自问答面板\n    const currentEntity = ref(''); // 来自图谱面板\n\n    // 处理问答面板实体变化\n    const handleMainEntityChange = entity => {\n      mainEntity.value = entity;\n      if (!currentEntity.value) {\n        currentEntity.value = entity;\n      }\n    };\n\n    // 处理图谱面板实体变化\n    const handleCurrentEntityChange = entity => {\n      currentEntity.value = entity;\n    };\n    const __returned__ = {\n      mainEntity,\n      currentEntity,\n      handleMainEntityChange,\n      handleCurrentEntityChange,\n      ref,\n      get ElRow() {\n        return ElRow;\n      },\n      get ElCol() {\n        return ElCol;\n      },\n      QaPanel,\n      GraphVisual\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","ElRow","ElCol","QaPanel","GraphVisual","mainEntity","currentEntity","handleMainEntityChange","entity","value","handleCurrentEntityChange"],"sources":["D:/前端大作业/kg-system/frontend/src/App.vue"],"sourcesContent":["<template>\r\n  <div id=\"app\" class=\"container\">\r\n    <h1 class=\"title\">知识图谱驱动的前端技术知识问答与推荐系统</h1>\r\n    \r\n    <el-row :gutter=\"20\" class=\"main-layout\">\r\n      <!-- 问答面板 -->\r\n      <el-col :span=\"12\" class=\"panel-col\">\r\n        <div class=\"panel qa-panel\">\r\n          <h2>问答与推荐</h2>\r\n          <QaPanel \r\n            @update:mainEntity=\"handleMainEntityChange\" \r\n            :current-entity=\"currentEntity\"\r\n          />\r\n        </div>\r\n      </el-col>\r\n      \r\n      <!-- 图谱面板 -->\r\n      <el-col :span=\"12\" class=\"panel-col\">\r\n        <div class=\"panel graph-panel\">\r\n          <h2>知识图谱可视化 \r\n            <span v-if=\"currentEntity\" style=\"font-size: 14px; color: #409EFF;\">\r\n              （当前聚焦：{{ currentEntity }}）\r\n            </span>\r\n          </h2>\r\n          <GraphVisual \r\n            :main-entity=\"mainEntity\" \r\n            @update:currentEntity=\"handleCurrentEntityChange\"\r\n          />\r\n        </div>\r\n      </el-col>\r\n    </el-row>\r\n  </div>\r\n</template>\r\n\r\n<script setup>\r\nimport { ref } from 'vue';\r\nimport { ElRow, ElCol } from 'element-plus';\r\nimport QaPanel from './components/QaPanel.vue';\r\nimport GraphVisual from './components/GraphVisual.vue';\r\n\r\n// 核心实体状态（联动问答和图谱）\r\nconst mainEntity = ref(''); // 来自问答面板\r\nconst currentEntity = ref(''); // 来自图谱面板\r\n\r\n// 处理问答面板实体变化\r\nconst handleMainEntityChange = (entity) => {\r\n  mainEntity.value = entity;\r\n  if (!currentEntity.value) {\r\n    currentEntity.value = entity;\r\n  }\r\n};\r\n\r\n// 处理图谱面板实体变化\r\nconst handleCurrentEntityChange = (entity) => {\r\n  currentEntity.value = entity;\r\n};\r\n</script>\r\n\r\n<style>\r\n/* 基础样式 */\r\n#app {\r\n  max-width: 1400px;\r\n  margin: 0 auto;\r\n  padding: 20px;\r\n  font-family: Avenir, Helvetica, Arial, sans-serif;\r\n}\r\n\r\n.title {\r\n  text-align: center;\r\n  color: #409EFF;\r\n  margin-bottom: 30px;\r\n}\r\n\r\n/* 布局样式：确保子元素有足够空间 */\r\n.main-layout {\r\n  width: 100%;\r\n  min-height: 700px; /* 父容器最小高度 */\r\n  display: flex;\r\n}\r\n\r\n.panel-col {\r\n  height: 100%;\r\n  display: flex;\r\n}\r\n\r\n/* 面板样式：固定高度，避免挤压 */\r\n.panel {\r\n  background: #f9f9f9;\r\n  padding: 20px;\r\n  border-radius: 8px;\r\n  width: 100%;\r\n  box-sizing: border-box; /* 关键：padding不影响整体尺寸 */\r\n}\r\n\r\n/* 问答面板高度 */\r\n.qa-panel {\r\n  height: 650px;\r\n}\r\n\r\n/* 图谱面板高度（与问答面板一致） */\r\n.graph-panel {\r\n  height: 650px;\r\n}\r\n\r\n.panel h2 {\r\n  margin-top: 0;\r\n  color: #333;\r\n  border-bottom: 1px solid #e6e6e6;\r\n  padding-bottom: 10px;\r\n  margin-bottom: 20px;\r\n}\r\n</style>"],"mappings":"AAmCA,SAASA,GAAG,QAAQ,KAAK;AACzB,SAASC,KAAK,EAAEC,KAAK,QAAQ,cAAc;AAC3C,OAAOC,OAAO,MAAM,0BAA0B;AAC9C,OAAOC,WAAW,MAAM,8BAA8B;;AAEtD;;;;;;;;IACA,MAAMC,UAAU,GAAGL,GAAG,CAAC,EAAE,CAAC,CAAC,CAAC;IAC5B,MAAMM,aAAa,GAAGN,GAAG,CAAC,EAAE,CAAC,CAAC,CAAC;;IAE/B;IACA,MAAMO,sBAAsB,GAAIC,MAAM,IAAK;MACzCH,UAAU,CAACI,KAAK,GAAGD,MAAM;MACzB,IAAI,CAACF,aAAa,CAACG,KAAK,EAAE;QACxBH,aAAa,CAACG,KAAK,GAAGD,MAAM;MAC9B;IACF,CAAC;;IAED;IACA,MAAME,yBAAyB,GAAIF,MAAM,IAAK;MAC5CF,aAAa,CAACG,KAAK,GAAGD,MAAM;IAC9B,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}